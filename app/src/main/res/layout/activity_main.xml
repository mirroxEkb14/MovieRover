<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/requiem_for_a_dream"
                android:contentDescription="@string/image_desc1"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/boardwalk_empire"
                android:contentDescription="@string/image_desc2"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/no_country_for_old_men"
                android:contentDescription="@string/image_desc3"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/devils_advocate"
                android:contentDescription="@string/image_desc4"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/disclaimer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/disclaimer"
        android:autoLink="web"
        android:focusable="true"
        android:clickable="true"
        android:shadowColor="@color/black"
        android:shadowDx="7"
        android:shadowDy="7"
        android:shadowRadius="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_menu"/>

    <LinearLayout
        android:id="@+id/home_navigation_container"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/corner_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_menu"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu_text"
            android:background="?selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_starred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_starred_text"
            android:background="?selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_watch_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_watch_later_text"
            android:background="?selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_picks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_picks_text"
            android:background="?selectableItemBackground"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_settings_text"
            android:background="?selectableItemBackground"/>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>