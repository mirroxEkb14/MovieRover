<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieRover" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Contextual menu overlays the existing toolbar. -->
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- AlertDialog theme. -->
    <style name="MyDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Theme.MyApp" parent="Theme.MovieRover">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>